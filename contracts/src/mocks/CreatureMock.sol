pragma solidity 0.8.23;

import { console2 } from "forge-std/console2.sol";

import { IEnemy, Status } from "../interfaces/IEnemy.sol";

contract CreatureMock is IEnemy {
    /*//////////////////////////////////////////////////////////////
                                STORAGE
    //////////////////////////////////////////////////////////////*/
    mapping(uint256 => Status) public status_;
    mapping(uint256 => uint256) public currentHp;

    /*//////////////////////////////////////////////////////////////
                              CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/
    /// @custom:oz-upgrades-unsafe-allow constructor
    // solhint-disable-next-line func-visibility
    constructor(uint256 _id, Status memory _status) {
        status_[_id] = _status;
        currentHp[_id] = _status.hp;
    }

    /*//////////////////////////////////////////////////////////////
                               MODIFIERS
    //////////////////////////////////////////////////////////////*/

    /*//////////////////////////////////////////////////////////////
                            EXTERNAL UPDATE
    //////////////////////////////////////////////////////////////*/
    function create(uint256 _id, Status memory _status) external {
        status_[_id] = _status;
        currentHp[_id] = _status.hp;
    }
    /*//////////////////////////////////////////////////////////////
                                  SET
    //////////////////////////////////////////////////////////////*/

    /*//////////////////////////////////////////////////////////////
                             EXTERNAL VIEW
    //////////////////////////////////////////////////////////////*/
    function status(uint256 _id) external view override returns (Status memory) {
        return status_[_id];
    }

    function exists(uint256 _id) external view override returns (bool) {
        return status_[_id].hp != 0;
    }

    /*//////////////////////////////////////////////////////////////
                             INTERNAL VIEW
    //////////////////////////////////////////////////////////////*/

    /*//////////////////////////////////////////////////////////////
                            INTERNAL UPDATE
    //////////////////////////////////////////////////////////////*/

    /*//////////////////////////////////////////////////////////////
                                DEFAULTS
    //////////////////////////////////////////////////////////////*/
}
